{
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": false,
        "incremental": true,
        "rootDir": "./src",
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
