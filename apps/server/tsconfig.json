{
    "include": ["src/**/*", "./environment.d.ts"],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "esnext",
        "sourceMap": true,
        "outDir": "./dist"
    },
    "baseUrl": ".",
    "paths": {
        "@centsibly/*": ["packages/*"]
    }
}
